{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BitStation Tool Schema v1",
  "type": "object",
  "required": ["tool_id", "name", "version", "platforms", "entrypoint_windows", "io_schema"],
  "properties": {
    "tool_id": { "type": "string", "minLength": 2 },
    "name": { "type": "string", "minLength": 2 },
    "version": { "type": "string", "minLength": 1 },
    "category": { "type": "string" },
    "platforms": {
      "type": "array",
      "items": { "type": "string", "enum": ["windows"] },
      "minItems": 1
    },
    "entrypoint_windows": { "type": "string", "minLength": 3 },
    "needs_models": { "type": "boolean" },
    "io_schema": { "type": "object" }
  }
}