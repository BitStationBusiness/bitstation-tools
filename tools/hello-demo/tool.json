{
    "tool_id": "hello-demo",
    "name": "Hello Demo",
    "version": "1.0.0",
    "category": "demo",
    "platforms": [
        "windows",
        "android"
    ],
    "entrypoint_windows": "runner/run.ps1",
    "needs_models": false,
    "supports_gpu_persistence": false,
    "io_schema": {
        "input": {
            "type": "object",
            "required": [
                "message"
            ],
            "properties": {
                "message": {
                    "type": "string",
                    "description": "Mensaje a procesar"
                }
            }
        },
        "output": {
            "type": "object",
            "required": [
                "ok",
                "response"
            ],
            "properties": {
                "ok": {
                    "type": "boolean"
                },
                "response": {
                    "type": "string",
                    "description": "Respuesta del backend"
                }
            }
        }
    }
}